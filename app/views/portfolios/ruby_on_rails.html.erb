<h1>Ruby on Rails Portfolio Items</h1>

<%= link_to "Create new Porfolio Ruby", new_portfolio_path if logged_in?(:site_admin)%>

<%= @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
	<%= link_to "Edit Item", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)%>
	<%= link_to "Delete Item", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%>
	<hr>
	<%#= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
<% end%>
