<header class="mb-5">
  <div class="collapse bg-dark" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          <h4 class="text-white">About</h4>
          <p class="text-muted">I am an aspiring full-stack developer who got into web dev out of necessity.</p>
        </div>
        <div class="col-sm-4 offset-md-1 py-4">
          <h4 class="text-white">Contact</h4>
          <ul class="list-unstyled">
            <li> <%= link_to "Home", root_path, class: "font-weight-bold text-muted pb-1" %> </li>
            <li> <%= link_to "About", about_path, class: "font-weight-bold text-muted pb-1" %>  </li>
            <li> <%= link_to "Blogs", blogs_path, class: "font-weight-bold  text-muted pb-1" %>  </li>
            <li> <%= link_to "Contact", contact_path, class: "font-weight-bold text-muted pb-1" %>  </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="navbar navbar-dark bg-dark box-shadow">
    <div class="container d-flex justify-content-between">
      <div>
        <%= login_helper "text-white btn btn-outline-info"%>
      </div>
        <%= link_to "My Portfolio", portfolios_path, class: "navbar-brand d-flex align-items-center font-weight-bold" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
</header>
