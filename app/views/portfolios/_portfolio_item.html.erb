<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image  unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: "card-title h3" %>
      <br>
      <h5 class="text-muted"><%= link_to portfolio_item.subtitle %></h5>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin)%>
          <%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin)%>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now)%></small>
      </div>
    </div>
  </div>
</div>
