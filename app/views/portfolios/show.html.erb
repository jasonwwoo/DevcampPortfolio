<div class="container mt-5">

  <div class="row pt-3">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main').to_s , width: "100%" %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title%></h1>

      <h4 class="font-italic"><%= @portfolio_item.subtitle%></h4>
      <p><%= @portfolio_item.body%></p>

      <hr>

      <h2>Technologies Used:</h2>

      <% @portfolio_item.technologies.each do |technology| %>
        <p><%= technology.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
  </div>
