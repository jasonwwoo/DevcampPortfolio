<%= form_with(model: @portfolio_item, local: true) do |form| %>

<div class="row">
<div class="col-md-6">


  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :thumb_image %>
    <%= form.file_field :thumb_image, class: "form-control" %>
  </div>


  <div class="form-group">
    <label class="btn btn-secondary">
      Upload a main image file<%= form.file_field :main_image, style: "display:none;" %>
    </label>
  </div>

  <div class="form-group">
    <label class="btn btn-secondary">
      Upload a thumb image file<%= form.file_field :thumb_image, style: "display:none;" %>
    </label>
  </div>

  <div class="form-group">
    <%= form.file_field :thumb_image, class: "btn btn-secondary" %>
  </div>

</div>
<div class="col-md-6">
  <div class="form-group"
<%= form.label :body %>
<%= form.text_area :body, class: "form-control", rows: 7 %>
</div>
</div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <h4 class="pt-2 pb-2">Technologies Used</h4>
    <%= form.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', form: technology_form %>
    <% end %>
    <div>
      <%= link_to_add_association 'Add Technology', form, :technologies, form_name: 'form' %>
    </div>

    <div class="actions">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>

  </div>
</div>
</div>
</div>

<% end %>
