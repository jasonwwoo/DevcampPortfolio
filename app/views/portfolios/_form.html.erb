<%= form_with(model: @portfolio_item, local: true) do |form| %>

<div class="row">
<div class="col-md-6">


  <div class="form-group"
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group"
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>
</div>
<div class="col-md-6">
  <div class="form-group"
<%= form.label :body %>
<%= form.text_area :body, class: "form-control", rows: 7 %>
</div>
</div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">


<h4 class="pt-2 pb-2">Technologies Used</h4>

<%= form.fields_for :technologies do |technology_form| %>
<% count = 1 %>
<div class="form-group">
  <%= technology_form.label :name, "Technology #{count}"%>
  <%= technology_form.text_field :name, class: "form-control",  rows: "10" %>
</div>
<% count = count+1%>
<% end %>

<div class="actions">
  <%= form.submit "Update", class: "btn btn-primary" %>
</div>

</div>
</div>
</div>
</div>

<% end %>
