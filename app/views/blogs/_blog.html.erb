<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title, blog, class: "text-muted font-italic" %></h2>
  <p class="blog-post-meta">Published
    <%= distance_of_time_in_words(blog.created_at, Time.now) %>
  </p>
  <p><%= blog.body %></p>
  <%= render partial: 'blogs/admin_actions', locals: {blog: blog} %>
</div>
