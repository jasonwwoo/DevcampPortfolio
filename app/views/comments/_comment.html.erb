<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11">
          <div class="d-flex justify-content-between">
            <h5> <%= comment.user.name %> </h5>
            <p class="text-muted font-italic">Written <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</p>
          </div>
          <div class="text-muted font-italic">
          </div>
          <div class="">
            <%= comment.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
